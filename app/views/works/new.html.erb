<%= form_for @work do |f| %>

	<%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :type %>
  <%= f.text_field :work_type %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= fields_for :image do |image| %>
  	<%= image.label :media %><br />
  	<%= image.file_field :media %>
  	<%= image.hidden_field :work_id, :value => @work.id %>
  <% end %>

  <%= f.hidden_field :user_id, :value => @user.id %>

	<%= f.submit 'Submit' %>

<% end %>