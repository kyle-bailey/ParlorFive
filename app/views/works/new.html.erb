<%= form_for @work do |f| %>

	<%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :type %>
  <%= f.text_field :work_type %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= fields_for @image do |image_form| %>
  	<%= image_form.label :media %><br />
  	<%= image_form.file_field :media %>
  <% end %>

  <%= f.hidden_field :user_id, :value => @user.id %>

	<%= f.submit 'Submit' %>

<% end %>